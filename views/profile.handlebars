<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Staylist</h3>

    <form class='form new-Staylist-form'>
      <div class='form-group'>
        <label for='Staylist-name'>Staylist name:</label>
        <input
          class='form-input'
          type='text'
          id='Staylist-name'
          name='Staylist-name'
        />
      </div>
      <div class='form-group'>
        <label for='Staylist-funding'>needed funding ($):</label>
        <input
          class='form-input'
          type='number'
          id='Staylist-funding'
          name='Staylist-funding'
        />
      </div>
      <div class='form-group'>
        <label for='Playlist-desc'>description:</label>
        <textarea
          class='form-input'
          id='Playlist-desc'
          name='Playlist-desc'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  {{#if Playlist.length}}
    <div class='col-md-6 song-list'>
      <h3>Current Playlist:</h3>

      {{#each Playlist as |Playlist|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/Playlist/{{Playlist.id}}'>{{Playlist.name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{Playlist.id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>